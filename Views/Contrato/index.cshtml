@model IEnumerable<Contrato>
@{
    ViewData["Title"] = "Contratos";

}

<h1>@ViewData["Title"]</h1>
<link rel="stylesheet" href="~/css/styles.css" asp-append-version="true" />
<script src="https://kit.fontawesome.com/708362d465.js" crossorigin="anonymous"></script>

<p>En esta sección se listarán todos los Inmuebles.</p>

<div class="col-md-12">
    <table class="table">
        <thead>
            <tr>

                <th>C.Contrato</th>
                <th>C.Inmueble</th>
                <th>c.Inquilino</th>
                <th>Datos Inmueble</th>
                <th>Nombre Inquilino</th>
                <th>Fecha Desde</th>
                <th>Fecha Hasta.</th>
                <th>Importe</th>
                <th></th>
            <tr>

                    @foreach (var item in Model)
                    {
                   <tr>

                    <td>@item.idcontrato</td>
                    <td>@item.idinmueble</td>
                    <td>@item.idinquilino</td>
                    <td>@item.datosinmueble?.ToString()</td>
                    <td>@item.datosinquilino?.ToString()</td>
                    <td>@item.importe</td>
                    <td>
                    <td>
                        <a asp-action="Editar" asp-route-id="@item.idcontrato" class="fa-solid fa-pen-to-square"
                            style="color:blue"></a>
                        <a asp-action="Baja" asp-route-id="@item.idcontrato" class="fa-solid fa-trash"
                            style="color:red"></a>

                    </td>
                    </tr>


                    
                    }


            </tr>


            </tr>
        </thead>
    </table>
</div>

<a asp-action="Agregar" class="btn btn-success">Crear nuevo</a>