@model IEnumerable<Inquilino>
@{
    ViewData["Title"] = "Inquilinos";
}
<h1>@ViewData["Title"] </h1>
<link rel="stylesheet" href="~/css/styles.css" asp-append-version="true" />
<script src="https://kit.fontawesome.com/708362d465.js" crossorigin="anonymous"></script>
<br>
<div class="row">
    <div class="col-md-8">
        <table class="table">
            <thead>
                <tr>
                    <th>Codigo</th>
                    <th>Nombre</th>
                    <th>Apellido</th>
                    <th>mail</th>
                    <th>dni</th>
                    <th>Acciones</th>
                </tr>
                <tr>
                    @foreach (var item in Model)
                    {
                    <tr>
                        <td>@item.idinquilino</td>
                        <td>@item.nombre</td>
                        <td>@item.apellido</td>
                        <td>@item.mail</td>
                        <td>@item.dni</td>
                        <td>
                            <a asp-action="Editar" asp-route-id="@item.idinquilino" class="fa-solid fa-pen-to-square"
                                style="color:blue"></a>
                            @if (User.IsInRole("Administrador"))
                            {
                            <a asp-action="Eliminar" asp-route-id="@item.idinquilino" class="fa-solid fa-trash"
                                style="color:red"></a>
                                }
                        </td>
                    </tr>
                    }
                </tr>
                <br>
            </thead>
        </table>
    </div>
</div>
<a asp-action="Agregar" class="btn btn-success">Crear nuevo</a>
