@model InmobiliariaBiolatti_LopezPujato.Models.Usuario
@{
    ViewData["Title"] = "CambioAvatar";
}

<div class="container mt-3">
    <div class="row justify-content-center">
        <div class="col-md-6"> <!-- Nuevo -->
            <div class="card">
                <div class="card-body">
                    <h1 class="text-center"><b>Modificar Avatar</b></h1>
                    <hr />
                    <dl class="row">
                        <form asp-action="CambioAvatar" enctype="multipart/form-data">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="AvatarFile" class="control-label"></label>
                                <br>
                                <input type="file" asp-for="AvatarFile" accept="image/*" class="form-control-file mb-3" />
                                <span asp-validation-for="AvatarFile" class="text-danger"></span>
                            <br>
                            </div>
                            <div class="form-group text-center">
                                <input type="submit" value="Guardar" class="btn btn-primary btn-guardar"
                                    style="margin-right: 30px;" />
                                <input type="submit" value="Eliminar Avatar" class="btn btn-primary btn-guardar"
                                    style="margin-right: 30px;" />
                                <a href='@Url.Action("Index", "Home")' class="btn btn-primary">Volver</a>
                                

                            </div>
                        </form>
                    </dl>
                </div>
            </div>
        </div>
    </div>
</div>
