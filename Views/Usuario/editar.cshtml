@model InmobiliariaBiolatti_LopezPujato.Models.Usuario
@{
    ViewData["Title"] = "Editar";
}

<div class="container mt-3">
    <div class="row justify-content-center">
        <div class="col-md-6"> <!-- Nuevo -->
            <div class="card">
                <div class="card-body">
                    <h1 class="text-center"><b>Modificar</b></h1>
                    <hr />
                    <dl class="row">
                        <form asp-action="EditarUsuario" enctype="multipart/form-data">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="IdUsuario" class="control-label"></label>
                                <input asp-for="IdUsuario" class="form-control" readonly />
                                <span asp-validation-for="IdUsuario" class="number"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Apellido" class="control-label"></label>
                                <input asp-for="Apellido" class="form-control" required />
                                <span asp-validation-for="Apellido" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Nombre" class="control-label"></label>
                                <input asp-for="Nombre" class="form-control" required />
                                <span asp-validation-for="Nombre" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Email" class="control-label"></label>
                                <input asp-for="Email" class="form-control" required />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label class="control-label">Rol</label>
                                <select class="form-control" name="Permiso">
                                    @foreach (var kvp in (IDictionary<int, string>)ViewBag.Roles)
                                        @if (kvp.Key == Model.Permiso)
                                        {
                                            <option selected value="@kvp.Key">@kvp.Value</option>
                                        }
                                        else
                                        {
                                            <option value="@kvp.Key">@kvp.Value</option>
                                        }
                                    }
                                </select>
                            </div>
                            <div class="form-group">
                                <label class="control-label">Ingrese la clave nueva:</label>
                                <input asp-for="Clave" type="password" class="form-control" />
                            </div>
                            <div class="form-group">
                                <label asp-for="AvatarFile" class="control-label"></label>
                                <br>
                                <input type="file" asp-for="AvatarFile" accept="image/*" class="form-control-file mb-3" />
                                <span asp-validation-for="AvatarFile" class="text-danger"></span>
                            <br>
                            </div>

                            <div class="form-group text-center">
                                <input type="submit" value="Guardar" class="btn btn-primary btn-guardar"
                                    style="margin-right: 30px;" />
                                <a href='@Url.Action("Index", "Usuario")' class="btn btn-primary">Volver</a>

                            </div>
                        </form>
                    </dl>
                </div>
            </div>
        </div>
    </div>
</div>
