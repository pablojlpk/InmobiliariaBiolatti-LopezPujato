@using System.Security.Claims
@model InmobiliariaBiolatti_LopezPujato.Models.CambioPasswordView;
@{
    ViewData["Title"] = "CambioPassword";
    var idusuario = User.Claims.FirstOrDefault(c => c.Type == ClaimTypes.PrimarySid);
    var Mensaje = ViewBag.Mensaje;
}

<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
<div class="container mt-3">
    <div class="row justify-content-center">
        <div class="col-md-6"> <!-- Nuevo -->
            <div class="card">
                <div class="card-body">
                    <h1 class="text-center"><b>Modificar Contrase√±a</b></h1>
                    <hr />
                    <dl class="row">
                        <form asp-action="CambioPassword" enctype="multipart/form-data">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            

                            <div class="form-group">

                                <div class="w3-panel w3-blue">
                                    <label class ="control-label mb-3" style="font-size: 20px;   text-align: center;">@Mensaje</label>
                                </div>

                                <br>
                                <label class="control-label mb-3">Clave Actual</label>
                                <input asp-for="ClaveAnterior" type="password" class="form-control mb-3" />
                            </div>
                            <div class="form-group">
                                <label class="control-label mb-3">Ingrese la clave nueva:</label>
                                
                                <input asp-for="ClaveNueva" type="password" class="form-control mb-3" />
                            </div>
                            <div class="form-group text-center">
                                <input type="submit" value="Guardar" class="btn btn-primary btn-guardar"
                                    style="margin-right: 30px;" />
                                <a href='@Url.Action("Index", "Home")' class="btn btn-primary">Volver</a>
                            </div>
                        </form>
                    </dl>
                </div>
            </div>
        </div>
    </div>
</div>