@model InmobiliariaBiolatti_LopezPujato.Models.Usuario
@{
    ViewData["Title"] = "CambioPassword";
}

<div class="container mt-3">
    <div class="row justify-content-center">
        <div class="col-md-6"> <!-- Nuevo -->
            <div class="card">
                <div class="card-body">
                    <h1 class="text-center"><b>Modificar Contrase√±a</b></h1>
                    <hr />
                    <dl class="row">
                        <form asp-action="CambioPassword" enctype="multipart/form-data">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            
                            <div class="form-group">
                                <label class="control-label">Ingrese la clave nueva:</label>
                                <input asp-for="Clave" type="password" class="form-control" />
                            </div>

                            <div class="form-group text-center">
                                <input type="submit" value="Guardar" class="btn btn-primary btn-guardar"
                                    style="margin-right: 30px;" />
                                <a href='@Url.Action("Index", "Home")' class="btn btn-primary">Volver</a>

                            </div>
                        </form>
                    </dl>
                </div>
            </div>
        </div>
    </div>
</div>
